import random

def hangman():
    words = ["python", "hangman", "programming", "developer", "computer", "science"]
    word = random.choice(words)  # select a random word
    guessed = ["_"] * len(word)  # hidden word display
    guessed_letters = set()      # store guessed letters
    lives = 6                    # number of allowed wrong guesses

    print("ğŸ¯ Welcome to Hangman!")
    print("Guess the word:")
    print(" ".join(guessed))

    while lives > 0:
        guess = input("\nEnter a letter: ").lower()

        # Invalid input
        if len(guess) != 1 or not guess.isalpha():
            print("âŒ Please enter only a single alphabet.")
            continue

        # Already guessed letter
        if guess in guessed_letters:
            print("âš  You already guessed that letter!")
            continue

        guessed_letters.add(guess)

        # If guessed letter is in the word
        if guess in word:
            print("âœ” Good job! Letter found.")
            for i in range(len(word)):
                if word[i] == guess:
                    guessed[i] = guess
        else:
            lives -= 1
            print(f"âŒ Wrong guess! Lives left: {lives}")

        print("\n" + " ".join(guessed))

        # Check if player wins
        if "_" not in guessed:
            print("\nğŸ‰ Congratulations! You guessed the word:", word)
            break
    else:
        print("\nğŸ’€ Game Over! The word was:", word)

# Run the game
hangman()
